{
  "name": "kundenapp",
  "version": "1.2.0",
  "description": "Kundenverwaltung - Lokale Desktop-Anwendung",
  "main": "main-electron.js",
  "author": "Kristian",
  "repository": {
    "type": "git",
    "url": "https://github.com/kristian84113R/kundenverwaltung.git"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build:portable": "electron-builder --win portable",
    "release": "electron-builder --win --publish always"
  },
  "devDependencies": {
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "canvas": "^3.2.0",
    "electron-updater": "^6.7.3",
    "pdf-parse": "^2.4.5"
  },
  "build": {
    "appId": "com.kundenapp.desktop",
    "productName": "Kundenverwaltung",
    "publish": {
      "provider": "github",
      "owner": "kristian84113R",
      "repo": "kundenverwaltung"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.png",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "deleteAppDataOnUninstall": false
    },
    "asarUnpack": [
      "**/node_modules/pdf-parse/**/*",
      "**/node_modules/@napi-rs/**/*",
      "**/node_modules/pdfjs-dist/**/*"
    ],
    "files": [
      "**/*",
      "!node_modules/canvas/build/Release/.deps{,/**/*}",
      "!**/*.md",
      "!.git{,/**/*}",
      "!convert-icon.js",
      "!seed-data.js",
      "!sample-customers.json",
      "!.env"
    ],
    "directories": {
      "output": "dist"
    }
  }
}
